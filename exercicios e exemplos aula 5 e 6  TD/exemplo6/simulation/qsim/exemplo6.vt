// wires                                               
wire [1:0] bus_2;

wire sampler;                             

// assign statements (if any)                          
exemplo6 i1 (
// port map - connection between master ports and signals/registers   
	.bus_1(bus_1),
	.bus_2(bus_2)
);
// bus_1[ 1 ]
always
begin
	bus_1[1] = 1'b0;
	bus_1[1] = #50000 1'b1;
	#50000;
end 
// bus_1[ 0 ]
always
begin
	bus_1[0] = 1'b0;
	bus_1[0] = #25000 1'b1;
	#25000;
end 

exemplo6_vlg_sample_tst tb_sample (
	.bus_1(bus_1),
	.sampler_tx(sampler)
);

exemplo6_vlg_check_tst tb_out(
	.bus_2(bus_2),
	.sampler_rx(sampler)
);
